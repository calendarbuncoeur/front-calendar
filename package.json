{
  "name": "front-calendar",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "yarn build:css && ng build",
    "build:css": "tailwindcss -i ./src/styles.scss -o ./src/output.css",
    "ng": "ng",
    "start": "yarn watch:css & ng serve",
    "test": "ng test",
    "watch": "ng build --watch --configuration development",
    "watch:css": "tailwindcss -i ./src/styles.scss -o ./src/output.css --watch"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "dependencies": {
    "@angular/animations": "^20.3.1",
    "@angular/cdk": "20.2.4",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/localize": "^20.3.1",
    "@angular/material": "20.2.4",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "angular-calendar": "^0.32.0",
    "angular-draggable-droppable": "^9.0.1",
    "angular-resizable-element": "^8.0.0",
    "date-fns": "^4.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.2",
    "@angular/cli": "^20.3.2",
    "@angular/compiler-cli": "^20.3.0",
    "@tailwindcss/cli": "^4.1.13",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "tailwindcss": "^4.1.13",
    "typescript": "~5.9.2"
  }
}
